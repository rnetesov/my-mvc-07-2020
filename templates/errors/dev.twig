<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Server Error</title>
</head>
<body>
<div class="container">
    <h2>Server Error</h2>
    <p>Code {{ e.getCode }}</p>
    <p>Message: {{ e.getMessage }}</p>
    <p>File: {{ e.getFile }}</p>
    <p>Line: {{ e.getLine }}</p>

    <h2>Stack Trace</h2>
    <table class="table">
        <thead>
            <tr class="danger">
                <th>cnt</th>
                <th>File</th>
                <th>Line</th>
                <th>Class</th>
                <th>Function</th>
            </tr>
        </thead>
        {% for err in e.getTrace() %}
            <tr class="warning">
                <td>{% if err.file is defined %} {{ err.file }} {% endif %}</td>
                <td>{% if err.line is defined %} {{ err.line }} {% endif %}</td>
                <td>{% if err.class is defined %} {{ err.class }} {% endif %}</td>
                <td>{% if err.function is defined %} {{ err.function }} {% endif %}</td>
            </tr>
        {% endfor %}
    </table>
</div>
</body>
</html>